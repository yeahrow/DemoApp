@using Microsoft.AspNetCore.Components

<div class="row border p-3">
    <div class="col-sm-6">
        <p>@anyGuid</p>
        <button class="btn btn-primary" @onclick="(() => GenerateNewGuid())">New Guid</button>
    </div>
</div>


@code {
    private Guid anyGuid;
    private bool isPrerendered = true;

    protected override async Task OnInitializedAsync()
    {
        Task.Delay(1000).Wait();
        anyGuid = Guid.NewGuid();
    }

    public async Task GenerateNewGuid()
    {
        anyGuid = Guid.NewGuid();
    }
}
